<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/ly_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="top"
            android:layout_marginTop="85dp"
            android:textColor="@color/font_color_black"
            android:textSize="16sp"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray_59"
            android:text="@string/dialog_message"/>
        <LinearLayout
            android:id="@+id/ly_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message"
            android:orientation="vertical">
            <com.cb.ratingbar.CBRatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                app:starSize="25dp"
                app:starSpace="10dp"
                app:starCount="5"
                app:starShowStroke="false"
                app:starFillColor="@color/gray_e8"
                app:starCoverColor="@color/tile2048_color"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">
        <FrameLayout
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/bg_round_gray_5">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/dialog_cancel"
                android:textSize="14sp"
                android:textColor="@color/font_color_black"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/btn_ok"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="45dp"
            android:background="@drawable/bg_round_light_5">
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/dialog_ok"
                android:textSize="14sp"
                android:textColor="@color/white"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>